<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchActivity">

    <TextView
        android:id="@+id/artist_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/artist_label"
        android:layout_margin="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/artist_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artist_label"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/venue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/artist_field"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/venue_label"
        android:layout_margin="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/venue_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/venue_label"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/state_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/venue_field"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/state_label"
        android:layout_margin="20dp"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/state_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="150dp"
        android:text="@string/search"/>

</androidx.constraintlayout.widget.ConstraintLayout>